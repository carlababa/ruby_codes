<h2>Edit Toy</h2>

<form action="/toys/<%= @i %>/update" method="POST">
  <div class="form-group">
      <p>Name: <input type="text" name="name" value="<%= @toy[:name] %>"></p>
  </div>
  <div class="form-group">
      <p>Quantity: <input type="text" name="quantity" value="<%= @toy[:quantity] %>"></p>
  </div>
  <div class="form-group">
      <p>Imagem: <input type="url" name="image" value="<%= @toy[:img] %>"></p>
  </div>
  <input class="btn btn-default" type="submit" value="Update">
  <button class="btn btn-default"><a href="/toys/<%= @i %>">Cancel</a></button>
</form>
